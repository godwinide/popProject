    window.onload = () => {
        // format numbers
        // add comma to amount
        var cleaveNum = new Cleave('#amountField', {
            numeral: true,
            numeralThousandsGroupStyle: 'thousand'
        });
        var cleaveNum2 = new Cleave('#cash', {
            numeral: true,
            numeralThousandsGroupStyle: 'thousand'
        });
    }
