<body style="background: #fff;">


    <div style="height: 100vh; width: 100vw; justify-content: center; align-items: center; margin: auto">
        <div class="actions mt-1 mb-1"
            style="margin:auto; text-align: center; justify-content: center; align-items: center">
            <button class="btn-info btn" id="printButton" onclick="change()" }>
                <i class="fas fa-print"></i>
                Print
            </button>
        </div>
        <div class="rounded py-3" id="printableArea2">

            <div class="logo-wrap text-center">
                <h1>Game Corner</h1>
                <h1>Virtual</h1>
                <div>
                    <h3>Week 1</h3>
                </div>
            </div>
            <div>
                <hr>
                <div class="playerdetails">

                    <% for (let p = 0; p < ticket.players.split(" ").length; p += 2) { %>

                    <div><%= (p / 2) + 1 %></div>
                    <div><%= players[p] %></div>
                    <div>vs</div>
                    <div class="hasBorder"><%= players[p + 1] %></div>
                    <div class="hasBorder">HS</div>
                    <% } %>

                </div>
                <div class="box">
                    <div class="left-align">Stake</div>
                    <div class="right-align">(N)<%= ticket.stake %></div>
                    <div class="left-align">Payout</div>
                    <div class="right-align">(N)<%= ticket.potWin %></div>
                </div>
            </div>
            <div style="border-bottom: 1px dotted #000; padding: 2px 1px; width:100%;"></div>
        </div>
    </div>

    <script>
        window.addEventListener("keydown", e => {
            if (e.keyCode == 13) {
                document.getElementById("printButton").click();
            }
        });
    </script>




