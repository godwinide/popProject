<div class="row mt-5 mb-5 ">
    <div class="col-md-6 m-auto">
        <div class="card card-body bg-info text-white">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <% include ./partials/messages %>
            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label for="name">First Name</label>
                    <input type="name" id="firstname" name="firstname" class="form-control"
                        placeholder="Enter First Name"
                        value="<%= typeof firstname != 'undefined' ? firstname : '' %>" />
                </div>
                <div class="form-group">
                    <label for="name">Last Name</label>
                    <input type="name" id="lastname" name="lastname" class="form-control" placeholder="Enter Last Name"
                        value="<%= typeof lastname != 'undefined' ? lastname : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email">Username</label>
                    <input type="username" id="email" name="username" class="form-control" placeholder="Enter Username"
                        value="<%= typeof username != 'undefined' ? username : '' %>" />
                </div>
                <div class="form-group">
                    <label for="email">Attendant ID</label>
                    <input type="number" id="id" name="attendantID" class="form-control"
                        placeholder="Enter Attendant ID"
                        value="<%= typeof attendantID != 'undefined' ? attendantID : '' %>" />
                </div>
                <div class="form-group">
                    <label for="balance">Initial Cash</label>
                    <input type="number" id="cash" name="cash" class="form-control" placeholder="Initail Cash"
                        value="<%= typeof cash != 'undefined' ? cash : 0 %>" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <button type="submit" class="btn btn-primary text-white btn-block">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>

